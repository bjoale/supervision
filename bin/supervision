#!/usr/bin/env bash

use() {
  {
    versions | grep $1
  } > /dev/null 2>&1
  if [ $? -eq 0 ]; then
    rm -f /opt/sitevision
    ln -s ~/.supervision/versions/$1 /opt/sitevision
    echo "Now using SiteVision $1."
  else
    echo "SiteVision $1 is not installed."
    exit 1
  fi
}

versions() {
  ls ~/.supervision/versions/ | sort
}

version() {
  path=`ls -l /opt/sitevision | awk '{print $11}'`
  path_sans_trailing_slash=${path%/}
  echo ${path_sans_trailing_slash##*/}
}

console() {
  pushd /opt/sitevision/bin > /dev/null
  sudo ./sitevision console
  popd > /dev/null
}

usage() {
  {
    echo "supervision alpha"
    echo "usage: supervision <command> [<args>]"
    echo ""
    echo "What supervision can do for you:"
    echo "   use           Set the SiteVision version"
    echo "   version       Show the current SiteVision version"
    echo "   versions      List all SiteVision versions known to supervision"
    echo "   console       Start the current SiteVision version in console mode"
  }
}

case "$1" in
  "use" )
    use $2
    ;;
  "versions" )
    versions
    ;;
  "version" )
    version
    ;;
  "console" )
    console
    ;;
  *)
    usage
    exit 1
    ;;
esac

exit 0
