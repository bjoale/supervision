#!/usr/bin/env bash

SUPERVISION_VERSION="0.1.0"

use() {
  {
    versions | grep $1
  } > /dev/null 2>&1
  if [ $? -eq 0 ]; then
    rm -f /opt/sitevision
    ln -s ~/.supervision/versions/$1 /opt/sitevision
    echo "Now using SiteVision $1."
  else
    echo "SiteVision $1 is not installed."
    exit 1
  fi
}

version() {
  check_for_symlink
  basename `readlink /opt/sitevision`
}

versions() {
  ls ~/.supervision/versions/ | sort
}

console() {
  check_for_symlink
  pushd /opt/sitevision/bin > /dev/null
  sudo ./sitevision console
  popd > /dev/null
}

supervision_version() {
  echo "supervision ${SUPERVISION_VERSION}"
}

usage() {
  {
    supervision_version
    echo "usage: supervision <command> [<args>]"
    echo ""
    echo "What supervision can do for you:"
    echo "   use           Set the SiteVision version"
    echo "   version       Show the current SiteVision version"
    echo "   versions      List all SiteVision versions known to supervision"
    echo "   console       Start the current SiteVision version in console mode"
  }
}

bootstrap() {
  mkdir -p ~/.supervision/versions
}

check_for_symlink() {
  if !([ -L /opt/sitevision ] && [ -d /opt/sitevision ]); then
    echo "No SiteVision version is set."
    exit 1
  fi
}

bootstrap

case "$1" in
  "use" )
    use $2
    ;;
  "versions" )
    versions
    ;;
  "version" )
    version
    ;;
  "console" )
    console
    ;;
  "--version" )
    supervision_version
    ;;
  *)
    usage
    exit 1
    ;;
esac

exit 0
